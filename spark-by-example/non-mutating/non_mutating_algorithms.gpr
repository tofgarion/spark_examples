project Non_Mutating_Algorithms is

  for Source_Dirs use (".", "../spec");

  package Compiler is
    for Default_Switches ("Ada") use ("-gnat12", "-gnato13");
  end Compiler;

  package Prove is
    for Switches use ("--mode=prove",
                      "--report=statistics",
                      "--proof=per_path",
                      "--warnings=continue");
  end Prove;

end Non_Mutating_Algorithms;
